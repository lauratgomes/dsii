 <% if @erro != nil %>
 <div class='alert alert-danger' role='alert'>
    <%= @erro %>
</div>
<% end %>
<div class="container-fluid">
    <div class="row align-items-center justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header card-title">
                    <h5> Cadastro de Usu√°rio </h5>
                </div>
                <div class="card-body">
                 <form action="/administrador/adicionar_usuario" method="post" enctype='multipart/form-data'>
                  <div class="form-group">
                   Nome: <input type="text" class="form-control" name="nome">
               </div>
               <div class="form-group">
                   Login: <input type="text" class="form-control" name="login">
               </div>
               <div class="form-group">
                   Senha: <input type="password" class="form-control" name="senha">
               </div>
               <div class="form-group">
                   Data de nascimento: <input type="date" class="form-control" name="data_nascimento">
               </div>
               <div class="form-group">
                   <label> Escolha uma foto de perfil </label>
                   <input type="file" class="form-control-file" name="imagem">
               </div> <br />
               <button type="submit" class="btn btn-secondary btn-block">Enviar</button>
           </form>
       </div>
   </div>
</div>
</div>
</div>