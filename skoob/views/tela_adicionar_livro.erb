 <% if @erro != nil %>
 <div class='alert alert-danger' role='alert'>
    <%= @erro %>
</div>
<% end %>
<div class="container-fluid">
    <div class="row align-items-center justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-header card-title">
                    <h5> Cadastro de Livro </h5>
                </div>
                <div class="card-body">
                    <form method="post" action="/administrador/adicionar_livro" enctype='multipart/form-data'>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label> ISBN: </label>
                                <input type="text" name="isbn" class="form-control" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Editora: </label>
                                <select name='editora' class="form-control">
                                    <% @vetEditora.each do |editora| %>
                                    <option value='<%= editora.id %>'> <%= editora.nome %> </option>
                                    <% end %>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Título: </label>
                            <input type="text" name="titulo" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Autor(a): </label>
                            <input type="text" name="autor" class="form-control" required>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label> Gênero: </label>
                                <select name="genero" class="form-control">
                                    <% @vetGenero.each do |genero| %>
                                    <option value="<%=genero.id%>"><%= genero.nome %> </option>
                                    <% end %>
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label>Ano de publicação: </label>
                                <input type="date" name="ano_publicacao" class="form-control" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label> Páginas: </label>
                                <input type="number" name="paginas" class="form-control" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label> Capa </label>
                            <input type="file" class="form-control-file" name="capa">
                        </div>
                        <br />
                        <div class="text-center">
                            <button type="submit" class="btn btn-secondary btn-block">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>