 <% if @erro != nil %>
 <div class='alert alert-danger' role='alert'>
  <%= @erro %>
</div>
<% end %>
<div class="container-fluid">
  <div class="row align-items-center justify-content-center">
    <div class="col-lg-6">
      <div class="card">
        <div class="card-header card-title">
          <h5> Edição do <%= @usuario.login %> </h5>
        </div>
        <div class="card-body">
          <form action="/administrador/alterar_usuario" method="post" enctype='multipart/form-data'>
            <div class="form-group">
              <label> Nome: </label>
              <input type="text" name='nome' class="form-control" value='<%= @usuario.nome %>'>
            </div>
            <div class="form-group">
             <label> Senha: </label>
             <input type="password" class="form-control" name="senha">
           </div>
           <div class="form-group">
             <label> Data de nascimento: </label>
             <input type="date" class="form-control" name="data_nascimento" value='<%= @usuario.data_nascimento %>'>
           </div>
           <div class="form-group">
            <label> Escolha uma foto de perfil </label>
            <input type="file" class="form-control-file" name="imagem">
          </div> <br />
          <input type="hidden" name='id' value='<%= @usuario.id %>'>
          <button type="submit" class="btn btn-secondary btn-lg btn-block">Enviar</button>
        </form>
      </div>
    </div>
  </div>