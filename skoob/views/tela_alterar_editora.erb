 <% if @erro != nil %>
 <div class='alert alert-danger' role='alert'>
    <%= @erro %>
</div>
<% end %>
<div class="container-fluid">
    <div class="row align-items-center justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header card-title">
                    <h5> Edição de Editora </h5>
                </div>
                <div class="card-body">
                 <form action="/administrador/alterar_editora" method="post">
                  <div class="form-group">
                   <label>Nome: </label>
                   <input type="text" name="nome" class="form-control" value="<%= @editora.nome %>">
               </div>
               <input type="hidden" name="id" value="<%= @editora.id %>">
               <br />
               <div class="text-center">
                <button type="submit" class="btn btn-secondary btn-block">Enviar</button>
            </div>
        </form>
    </div>
</div>
</div>
</div>
</div>