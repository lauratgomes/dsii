            xhttp.open("GET", "/administrador/listar_resenha", true);                  
            xhttp.send(); 
        }
        
    </script>
</head>
<body>
    <div id="teste">

        <nav id="menu" class="navbar navbar-expand-lg navbar-custom" style="background-color: #C85C43;">

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <img width="140px" src="/uploads/skoob.png" />
