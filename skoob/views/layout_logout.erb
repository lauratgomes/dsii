    <link rel="shortcut icon" href="/uploads/skoob_fav.png"/>
    <script type="text/javascript">
        function criaObjetoAjax(){
            if (window.XMLHttpRequest) {
                xmlhttp = new XMLHttpRequest();
            } else {
                xmlhttp = new ActiveXObject("Microsoft.XMLHTTP");
            }
            return xmlhttp;
        }   

        function listar_genero(){
            var xhttp = criaObjetoAjax();
            xhttp.onreadystatechange = function() {
                if (this.readyState == 4 && this.status == 200) {
                    document.getElementById('teste').innerHTML = this.responseText;
                }
            };
            xhttp.open("GET", "/administrador/listar_genero", true);                  
            xhttp.send(); 
        }
        
        function listar_editora(){
            var xhttp = criaObjetoAjax();
            xhttp.onreadystatechange = function() {
                if (this.readyState == 4 && this.status == 200) {
                    document.getElementById('teste').innerHTML = this.responseText;
                }
            };
            xhttp.open("GET", "/administrador/listar_editora", true);                  
            xhttp.send(); 
        }
        
        function listar_livro(){
